<?xml version="1.0" encoding="UTF-8"?>
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#">
   <rdf:Description rdf:about="{$issue_pid}">
      <mods:mods xmlns:mods="http://www.loc.gov/mods/v3">
         <mods:identifier type="filename">{$attachment}</mods:identifier>
         <mods:genre>cover</mods:genre>
      </mods:mods>
   </rdf:Description>
   {section name=ss loop=$sections}
   <rdf:Description rdf:about="section">
      <mods:mods xmlns:mods="http://www.loc.gov/mods/v3">
         <mods:titleInfo>
            <mods:title>{$sections[ss].section_title}</mods:title>
         </mods:titleInfo>
         <mods:genre>section</mods:genre>
      </mods:mods>
      <rdf:Seq>
         {section name=aa loop=$sections[ss].articles}
         <rdf:li rdf:resource="{$sections[ss].articles[aa].article_pid}"/>
         {/section}
      </rdf:Seq>
   </rdf:Description>
   {/section}
   
</rdf:RDF>
